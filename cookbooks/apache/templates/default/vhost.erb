#vhost template file

<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>

<VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	DocumentRoot "<%= @document_root %>"

   <Directory "<%= @document_root %> >"
        DirectoryIndex index.html index.php
        Options FollowSymLinks
        AllowOverride All
        Require all granted
   </Directory>
</VirtualHost>
